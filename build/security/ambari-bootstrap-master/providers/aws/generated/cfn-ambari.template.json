},
"MasterInstanceCount": {
"Default": "1",
"Description": "Number of Master instances",
"MaxValue": "99",
"MinValue": "1",
"Type": "Number"
},
"MasterInstanceType": {
"ConstraintDescription": "Must be a valid EC2 instance type.",
"Default": "c3.4xlarge",
"Description": "Instance type for master node",
"Type": "String"
},
"MasterUseEBS": {
"AllowedValues": [
"yes",
"no"
],
"ConstraintDescription": "Must be yes or no only.",
"Default": "no",
