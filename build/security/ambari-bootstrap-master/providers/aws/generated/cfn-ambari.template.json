"MaxLength": "18",
"MinLength": "9",
"Type": "String"
},
"WorkerInstanceCount": {
"Default": "2",
"Description": "Number of Worker instances",
"MaxValue": "99",
"MinValue": "1",
"Type": "Number"
},
"WorkerInstanceType": {
"ConstraintDescription": "Must be a valid EC2 instance type.",
"Default": "i2.4xlarge",
